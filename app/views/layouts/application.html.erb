<!DOCTYPE html>
<html>
<head>
  <title>Flixter</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link href="http://vjs.zencdn.net/5.9.2/video-js.css" rel="stylesheet">
  <!-- If you'd like to support IE8 -->
  <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
</head>
<body>

  <div id="wrap">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Flixter", root_url, class: 'navbar-brand' %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to 'See All Courses', courses_path %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to 'My Dashboard', dashboard_path %></li>
              <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to 'Sign in', new_user_session_path %></li>
              <li><%= link_to 'Sign up', new_user_registration_path %></li>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>


    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    
  <%= yield %>

</div>

<br class="clr" />

<div id="footer">
  <div class="container">
    <div class='col-xs-12 col-sm-3'>
      <b>Teachers</b>
      <br />
      <%= link_to 'Teach a Course', new_instructor_course_path %>
      <br />
      <%= link_to 'My Dashboard', dashboard_path %>
    </div>
    <div class='col-xs-12 col-sm-3'>
      <b>About</b>
      <br />
      <%= link_to 'Team', '#' %>
      <br />
      <%= link_to 'Careers', '#' %>
      <br />
      <%= link_to 'Privacy Policy', '#' %>
    </div>
    <div class='col-xs-12 col-sm-3'>
      <b>Contact</b>
      <br />
      meyers.ricky@gmail.com
      <br />
      4505 Duval Street
      <br />
      Austin, TX 78751
    </div>
    <div class='col-xs-12 col-sm-3'>
      <b>Social</b>
      <br />
      <%= link_to 'https://github.com/tr1ck' do %>
        <%= image_tag 'github.png', class:'social-button' %>
      <% end %>
      <%= link_to 'https://www.facebook.com/ricky.meyers.98' do %>
        <%= image_tag 'facebook.png', class:'social-button' %>
      <% end %>
      <%= link_to 'https://twitter.com/meyers_ricky' do %>
        <%= image_tag 'twitter.png', class:'social-button' %>
      <% end %>
    </div>
  </div>
</div>


</body>
</html>
